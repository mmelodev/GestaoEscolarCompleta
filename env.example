# Database Configuration
DB_URL=jdbc:mysql://localhost:3306/arirang_db?createDatabaseIfNotExist=true&serverTimezone=UTC
DB_USERNAME=root
DB_PASSWORD=your_secure_password_here
DB_DRIVER=com.mysql.cj.jdbc.Driver

# JWT Configuration
# ⚠️ OBRIGATÓRIO: Configure um JWT secret seguro
# ⚠️ Mínimo: 32 caracteres (256 bits) para HMAC-SHA256
# ⚠️ Recomendado: Use um gerador de secrets seguro
#   Windows (PowerShell): [Convert]::ToBase64String((1..32 | ForEach-Object { Get-Random -Maximum 256 }))
#   Linux/Mac: openssl rand -base64 32
#   Online: https://www.random.org/strings/ (32 caracteres, alfanumérico + símbolos)
JWT_SECRET=your_super_secret_jwt_key_here_must_be_at_least_32_characters_long
JWT_EXPIRATION=86400000

# Logging
LOG_PATH=logs
# WARN em produção evita log verboso; use DEBUG para inspecionar SQL em desenvolvimento
LOG_SQL_LEVEL=WARN

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Cache Configuration (ISO-8601 duration para TTL)
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=PT10M
CACHE_ALLOW_NULL=false
CACHE_KEY_PREFIX=plataforma::

# Application Configuration
SPRING_PROFILES_ACTIVE=dev

# Default Users Configuration (apenas para desenvolvimento)
# ⚠️ IMPORTANTE: Em produção, deixe vazio ou não configure para desabilitar criação automática
APP_DEFAULT_ADMIN_PASSWORD=admin123
APP_DEFAULT_TEST_PASSWORD=teste123

# CORS Configuration (apenas para produção)
# Domínio configurado: institutoarirangedu.com.br
# Configure as origens permitidas para sua aplicação frontend
# Exemplo com padrões: https://*.meudominio.com,https://meudominio.com
# Exemplo com origens específicas: https://app.meudominio.com,https://www.meudominio.com
# Já configurado para institutoarirangedu.com.br em application-prod.properties
CORS_ALLOWED_ORIGIN_PATTERNS=https://*.institutoarirangedu.com.br,https://institutoarirangedu.com.br
CORS_ALLOWED_ORIGINS=https://institutoarirangedu.com.br,https://www.institutoarirangedu.com.br

# File Upload Configuration (opcional)
# Tamanho máximo do arquivo em bytes (padrão: 5242880 = 5MB)
UPLOAD_MAX_FILE_SIZE=5242880
# Extensões permitidas (separadas por vírgula)
UPLOAD_ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.gif,.webp
# Validar conteúdo da imagem (true/false)
UPLOAD_VALIDATE_IMAGE_CONTENT=true
# Dimensões máximas da imagem em pixels
UPLOAD_MAX_IMAGE_WIDTH=4096
UPLOAD_MAX_IMAGE_HEIGHT=4096